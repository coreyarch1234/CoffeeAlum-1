<% provide(:title, "Log in") %>
<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>



    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, :class=>"form-control" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, :class=>"form-control" %>
    </div >

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
